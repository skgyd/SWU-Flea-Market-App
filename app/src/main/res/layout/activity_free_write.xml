<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FreeWriteActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleFreeWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 작성"
        android:textStyle="bold"
        android:textColor="#ff4848"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!--이미지뷰, 사진등록 버튼, 드롭다운 스피너, 제목-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgFreeWrite"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/photo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFreeWriteImgReg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="사진 찍기"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="2.5dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:id="@+id/btnFreeWriteGalleryReg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="갤러리"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/edtFreeWriteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:hint="제목" />


            <!--제품상태, 드롭다운 스피너-->
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="제품 상태"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/spinBuyWriteState"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:spinnerMode="dropdown"
                    android:gravity="center"/>


            </LinearLayout>-->


            <EditText
                android:id="@+id/edtFreeWriteExplain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="50dp"
                android:hint="설명"
                android:singleLine="false" />

            <EditText
                android:id="@+id/edtFreeWritePlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:hint="장소" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <Button
                    android:id="@+id/btnFreeWriteOk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="작성 완료"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>