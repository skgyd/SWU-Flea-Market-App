<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SellWriteActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleSellWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 작성"
        android:textStyle="bold"
        android:textColor="#ff4848"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSellWrite"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/photo"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSellWriteImgReg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="사진 찍기"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="2.5dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:id="@+id/btnSellWriteGalleryReg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="갤러리"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinSellWriteCategory"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginVertical="15dp"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/edtSellWriteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:hint="제목"/>

            <EditText
                android:id="@+id/edtSellWriteWishPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:hint="희망가"/>

            <EditText
                android:id="@+id/edtSellWriteWishOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:hint="희망옵션"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSellWriteReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"
                    android:text="작성 완료" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>