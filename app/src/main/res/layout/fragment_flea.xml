<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.FragmentFlea">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnClothes"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/clothes_icon" />

            <ImageButton
                android:id="@+id/btnBook"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/book_icon" />

            <ImageButton
                android:id="@+id/btnLife"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/life_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="옷"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="책"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="생활용품"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="82dp">


            <ImageButton
                android:id="@+id/btnGifticon"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/gift_icon" />

            <ImageButton
                android:id="@+id/btnData"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/data_icon" />

            <ImageButton
                android:id="@+id/btnTicket"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/ticket_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기프티콘"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="데이터"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="대리예매"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="82dp">


            <ImageButton
                android:id="@+id/btnElecDevice"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/elecdevice_icon" />

            <ImageButton
                android:id="@+id/btnCosmetic"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/cosmetic_icon" />

            <ImageButton
                android:id="@+id/btnEtc"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/border_edittext"
                android:scaleType="fitCenter"
                android:src="@drawable/etc_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전자기기"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="화장품"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기타"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

