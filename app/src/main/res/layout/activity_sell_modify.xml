<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SellModifyActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleSellModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 수정"
        android:textStyle="bold"
        android:textColor="#ff4848"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sellWriteImgView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/photo"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSellModifyImgReg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="사진 찍기"
            android:textStyle="bold"
            android:textColor="#5b5b5b"
            android:background="@drawable/border_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnSellModifyGalleryReg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="갤러리"
            android:textStyle="bold"
            android:textColor="#5b5b5b"
            android:background="@drawable/border_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
            <Spinner
                android:id="@+id/spinSellModifyCategory"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:spinnerMode="dropdown"
                />

            <EditText
                android:id="@+id/edtSellModifyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:hint="제목"/>

            <EditText
                android:id="@+id/edtSellModifyWishPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:hint="희망가"/>

            <EditText
                android:id="@+id/edtSellModifyWishOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:hint="희망옵션"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <Button
                    android:id="@+id/btnSellModifyReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#5b5b5b"
                    android:background="@drawable/border_button"
                    android:text="수정 완료" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>